extends layouts/frontend

block content.middle.aligned.center.aligned.grid.six.wide.column
            form(method="post", action="/signIn").stacked.segment
                    +field('text', 'firstName', 'First name')
                    +field('text', 'lastName', 'Last name')
                    +field('email', 'mail', 'your.mail@address.tld')
                    +field('password', 'password', 'Password')
                    +field('password', 'password_confirm', 'Confirm password')
                    button(type="submit").fluid.large.teal.submit.button Sign In

                .error.message


mixin field(type, name, placeholder).field.icon.input
            i.icon(class=(type === 'password' ? 'lock' : 'user'))
            input(type=type, name=name, placeholder=placeholder, required=true)
